{% extends "@bazar/layouts/field.twig" %}

{% block value %}
	{{ value|raw }}

	{% if value == "hedgeDoc" %}
		{% set hedgeDocUrl = "http://localhost:8081/" %}
		{% include "@collaborativeTools/hedgedoc.twig" with {'url': hedgeDocUrl} %}
	{% elseif value == "scrumblr" %}
		{% set scrumblrUrl = "http://localhost:8081/" %}
		{% include "@collaborativeTools/scrumblr.twig" with {'url': scrumblrUrl} %}
	{% endif %}
{% endblock %}
